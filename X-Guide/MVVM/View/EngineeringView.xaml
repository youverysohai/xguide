<UserControl x:Class="X_Guide.MVVM.View.EngineeringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:X_Guide.MVVM.View"
             xmlns:hc="https://handyorg.github.io/handycontrol"

             mc:Ignorable="d"      
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Define a DataTemplate for displaying a customer object -->
        <DataTemplate DataType="{x:Type local:EngineeringView}">
            <StackPanel>
                <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                <TextBlock Text="{Binding Email}" Margin="0,5,0,0" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <materialDesign:Card Background="#2d3030">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <hc:Card Background="#777777" >
          <hc:StepBar Name="step" Grid.Row="0" IsMouseSelectable="True" >
                <hc:StepBarItem  Content="Select Robot"/>
                <hc:StepBarItem  Content="Camera Mounting,Orientation"/>
                <hc:StepBarItem  Content="Vision Flow for calibration"/>
                <hc:StepBarItem  Content="Robot Motion Parameters"/>
                <hc:StepBarItem  Content="Log Robot to desired calibration point"/>
                <hc:StepBarItem  Content="Start calibration"/>
                <hc:StepBarItem  Content="Complete"/>
            </hc:StepBar>
            </hc:Card>

            
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Click="Button_Prev" Width="180" Content="Prev"/>
                <Button Click="Button_Next" Width="180"  Content="Next"/>
            </StackPanel>
        </Grid>

    </materialDesign:Card>
</UserControl>
