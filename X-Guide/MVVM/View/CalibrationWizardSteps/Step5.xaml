<UserControl x:Class="X_Guide.MVVM.View.CalibrationWizardSteps.Step5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:X_Guide.MVVM.View.CalibrationWizardSteps"
             xmlns:dshow="clr-namespace:DirectShowLib;assembly=DirectShowLib"
             mc:Ignorable="d" 
             FontSize="16"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"   
                
             d:DesignHeight="550" d:DesignWidth="1000">
    <UserControl.Resources>

        <Style TargetType="Button" BasedOn="{x:Null}"></Style>
        <Style TargetType="Label" BasedOn="{x:Null}"></Style>
        <Style TargetType="ComboBox" BasedOn="{x:Null}"></Style>
    </UserControl.Resources>
    <Grid Margin="0 0 0 10">
        <materialDesign:Card UniformCornerRadius="20" Margin="0 10 15 0">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0"  Text="Jog to Desired Calibration Point" HorizontalAlignment="Center" FontSize="35" />
                <!--<Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Image Grid.ColumnSpan="3" Grid.RowSpan="3" x:Name="videoPlayer" Stretch="Uniform"/>
                    <Border Grid.Row="1" Grid.Column="1" BorderThickness="2" BorderBrush="Yellow"></Border>

                </Grid>-->
                <Grid Grid.Row="1">
                    <Canvas>
                        <Image Width="630" Height="280" x:Name="videoPlayer" Source="{Binding VideoSource}"/>
                        <Border Canvas.Left="200" Canvas.Top="80" Width="250" Height="140" BorderThickness="3" BorderBrush="{DynamicResource PrimaryBlueColor}"></Border>
                    </Canvas>
                </Grid>
                <StackPanel Grid.Row="2">
                    <ComboBox x:Name="comboBox"
                          Style="{DynamicResource ComboBoxStyle}"
                  DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="Select Video Source"
                  ItemsSource="{Binding VideoDevices}"
                  SelectedItem="{Binding CurrentDevice}" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button  
                            Style="{DynamicResource MaterialDesignOutlinedButton}"
                Command="{Binding VideoCommand}" CommandParameter="Start"
                Content="Play" />
                        <Button
                            Margin="10 0 0 0"
                          Style="{DynamicResource MaterialDesignOutlinedDarkButton}"
                        Command="{Binding VideoCommand}" CommandParameter="Stop" 
                Content="Pause" />
                    </StackPanel>

                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                    <Label VerticalAlignment="Bottom" Style="{DynamicResource MaterialDesignLabel}" Content="Jog Distance (mm) :"/>
                    <TextBox VerticalAlignment="Bottom" Style="{DynamicResource MaterialDesignTextBox}" MinWidth="40" TextAlignment="Center">
                        </TextBox>
                </StackPanel>
                <!-- JogButtons and Rotations-->
                <Grid Grid.Row="1" Grid.Column="2">
                    <Grid.RowDefinitions >
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!--UP -->
                    <Image VerticalAlignment="Top" Grid.Column="2" Grid.Row="0"  Stretch="Uniform" Source="pack://application:,,,/Style/ImageSource/up.png" ToolTip="Z+" ToolTipService.InitialShowDelay="100"/>

                    <Button  VerticalAlignment="Top" Height="69"  Grid.Column="2" Grid.Row="0" BorderThickness="0"  Style="{StaticResource TransparentStyle}" ToolTip="Z+" ToolTipService.InitialShowDelay="100">
                        <TextBlock Style="{DynamicResource ButtonInnerTextBlockCenter}">Z+</TextBlock>
                    </Button>

                    <!--Down -->

                    <Image VerticalAlignment="Bottom" Cursor="Hand" Grid.Column="2" Grid.Row="1"  Stretch="Uniform" Source="pack://application:,,,/Style/ImageSource/down.png" ToolTip="Z-" ToolTipService.InitialShowDelay="100"/>

                    <Button VerticalAlignment="Bottom" Height="69"  Grid.Column="2" Grid.Row="1" BorderThickness="0"  Style="{StaticResource TransparentStyle}" ToolTip="Z-" ToolTipService.InitialShowDelay="100">
                        <TextBlock Style="{DynamicResource ButtonInnerTextBlockCenter}" >Z-</TextBlock>
                    </Button>
                    <!-- Arrow Button-->

                    <Viewbox Grid.Row="0" Grid.RowSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top">
                        <Canvas Width="260" Height="280">
                            <Image Width="260" Canvas.Top="40" Source="pack://application:,,,/Style/ImageSource/arrows.png" />
                            <Button Style="{DynamicResource UpArrowButton}">
                                <TextBlock Style="{DynamicResource ButtonInnerTextBlockCenter}">Y+</TextBlock>
                            </Button>
                            <Button Style="{DynamicResource DownArrowButton}">
                                <TextBlock Style="{DynamicResource ButtonInnerTextBlockCenter}">Y-</TextBlock>
                            </Button>
                            <Button Style="{DynamicResource LeftArrowButton}">
                                <TextBlock Style="{DynamicResource ButtonInnerTextBlockCenter}">X+</TextBlock>
                            </Button>
                            <Button Style="{DynamicResource RightArrowButton}">
                                <TextBlock Style="{DynamicResource ButtonInnerTextBlockCenter}">X-</TextBlock>
                            </Button>
                            <!-- Z rotation-->
                            <Button Style="{DynamicResource ClockwiseButton}">
                                <TextBlock Style="{DynamicResource ClockwiseTextBlock}">Rz+</TextBlock>
                            </Button>
                            <Button Style="{DynamicResource AntiClockwiseButton}">
                                <TextBlock Style="{DynamicResource AntiClockwiseTextBlock}">Rz-</TextBlock>
                            </Button>
                        </Canvas>
                    </Viewbox>


                </Grid>

                 <!--Rotation RightBottom Grid--> 
                
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                 <!-- Your Command -->
                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2">▲ Press Any Button to Jog ▲</TextBlock>
                   
                    <!--Row 1 : Rotation X--> 
                
                    <Button Grid.Row="1" Grid.Column="0" Style="{DynamicResource RotationButtonStyle}" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Rx" FontStyle="Italic" FontSize="11"/>
                            <TextBlock Text="-" FontSize="30" />
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="1" Grid.Column="2" Style="{DynamicResource RotationButtonStyle}" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Rx" FontStyle="Italic" FontSize="11"/>
                            <TextBlock Text="+" FontSize="30" />
                        </StackPanel>
                    </Button>
                    <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True"
                             materialDesign:HintAssist.Hint="X-rotation"   TextAlignment="Center"
                             Text="0°" Style="{DynamicResource InputMaterialDesignTextBox}" Height="70"></TextBox>
                    
                 <!--Row 2: Rotation Y--> 
                
                    <Button  Grid.Row="2"  Grid.Column="0" Style="{DynamicResource RotationButtonStyle}" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Ry" FontStyle="Italic" FontSize="11"/>
                            <TextBlock Text="-" FontSize="30" />
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="2" Grid.Column="2" Style="{DynamicResource RotationButtonStyle}" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Ry" FontStyle="Italic" FontSize="11"/>
                            <TextBlock Text="+" FontSize="30" />
                        </StackPanel>
                    </Button>
                    <TextBox  Grid.Row="2"   Grid.Column="1"     TextAlignment="Center"
                              IsReadOnly="True" materialDesign:HintAssist.Hint="Y-rotation" 
                              Text="0°" Style="{DynamicResource InputMaterialDesignTextBox}" Height="70"></TextBox>
                    
                </Grid>
            </Grid>

        </materialDesign:Card>
    </Grid>


</UserControl>
