<UserControl x:Class="X_Guide.MVVM.View.CalibrationWizardSteps.Step5"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:X_Guide.MVVM.View.CalibrationWizardSteps"
             xmlns:dshow="clr-namespace:DirectShowLib;assembly=DirectShowLib"
             mc:Ignorable="d" 
             FontSize="16"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"     
             d:DesignHeight="550" d:DesignWidth="1000">
    <UserControl.Resources>

        <Style TargetType="Button" BasedOn="{x:Null}"></Style>
        <Style TargetType="Label" BasedOn="{x:Null}"></Style>
        <Style TargetType="ComboBox" BasedOn="{x:Null}"></Style>
    </UserControl.Resources>
    <Grid Margin="0 0 0 10">
        <materialDesign:Card UniformCornerRadius="20" Margin="0 10 15 0">

            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.ColumnSpan="2" Grid.Row="0"  Text="Jog to Desired Calibration Point" HorizontalAlignment="Center" FontSize="35" />
                <!--<Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Image Grid.ColumnSpan="3" Grid.RowSpan="3" x:Name="videoPlayer" Stretch="Uniform"/>
                    <Border Grid.Row="1" Grid.Column="1" BorderThickness="2" BorderBrush="Yellow"></Border>

                </Grid>-->
                <Grid Grid.Row="1">
                    <Canvas>
                        <Image Width="630" Height="280" x:Name="videoPlayer" Source="{Binding VideoSource}"/>
                        <Border Canvas.Left="200" Canvas.Top="80" Width="250" Height="140" BorderThickness="3" BorderBrush="{DynamicResource PrimaryBlueColor}"></Border>
                    </Canvas>
                </Grid>
                <StackPanel Grid.Row="2">
                    <ComboBox x:Name="comboBox"
                          Style="{DynamicResource ComboBoxStyle}"
                  DisplayMemberPath="Name"
                              materialDesign:HintAssist.Hint="Select Video Source"
                  ItemsSource="{Binding VideoDevices}"
                  SelectedItem="{Binding CurrentDevice}" />

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button  
                            Style="{DynamicResource MaterialDesignOutlinedButton}"
                Command="{Binding VideoCommand}" CommandParameter="Start"
                Content="Play" />
                        <Button
                            Margin="10 0 0 0"
                          Style="{DynamicResource MaterialDesignOutlinedDarkButton}"
                        Command="{Binding VideoCommand}" CommandParameter="Stop" 
                Content="Pause" />
                    </StackPanel>

                </StackPanel>
                <!-- JogButtons and Rotations-->
                <TextBlock Grid.Row="1" Grid.Column="2" FontSize="18" > 
                    <materialDesign:PackIcon Kind="CursorMove" Style="{DynamicResource IconStyle24}"/>
                   Jog</TextBlock>
                <Grid Grid.Row="1" Grid.Column="2">
                    <Grid.RowDefinitions >
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!--UP -->
                    <Button Grid.Column="2" Grid.Row="0" BorderThickness="0"  Style="{StaticResource TransparentStyle}">
                        <Image  Stretch="Uniform" Source="pack://application:,,,/Style/ImageSource/up.png" ToolTip="Z+" ToolTipService.InitialShowDelay="100"/>
                    </Button>

                    <!--Down -->
                    <Button Grid.Column="2" Grid.Row="1" BorderThickness="0"  Style="{StaticResource TransparentStyle}">
                        <Image  Stretch="Uniform" Source="pack://application:,,,/Style/ImageSource/down.png" ToolTip="Z-" ToolTipService.InitialShowDelay="100"/>
                    </Button>
                    <!-- Arrow Button-->

                    <Canvas  Grid.Row="0" Grid.RowSpan="2"  HorizontalAlignment="Left" VerticalAlignment="Top" Width="260" Height="280" >
                        <Image Width="260" Canvas.Top="40" Source="pack://application:,,,/Style/ImageSource/arrows.png"/>

                        <Ellipse    Style="{DynamicResource UpArrow}"/>
                        <Ellipse    Style="{DynamicResource DownArrow}"/>
                        <Ellipse    Style="{DynamicResource LeftArrow}"/>
                        <Ellipse    Style="{DynamicResource RightArrow}"/>

                    </Canvas>

                </Grid>
                <!-- Jog Distance -->
                <TextBox Grid.Row="2" Grid.Column="2" Style="{DynamicResource MaterialDesignTextBox}"
                             Height="40"
                             materialDesign:TextFieldAssist.HasFilledTextField="False"
                             materialDesign:TextFieldAssist.HasOutlinedTextField="False"
                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                             materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                             materialDesign:TextFieldAssist.TextBoxViewMargin="10,3,0,0"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             materialDesign:HintAssist.Hint="Jog Distance (mm)"
                             materialDesign:HintAssist.HelperTextFontSize="12"
                             materialDesign:HintAssist.IsFloating="False"
                             materialDesign:HintAssist.FloatingScale="0.4"
                             >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type materialDesign:SmartHint}">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <!-- Rotation RightBottom Grid -->
                <!--
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    -->
                <!-- Row 1 : Rotation X -->
                <!--
                    <Button Grid.Row="0" Grid.Column="0" Style="{DynamicResource RotationButtonStyle}" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Rx" FontStyle="Italic" FontSize="11"/>
                            <TextBlock Text="-" FontSize="30" />
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="0" Grid.Column="2" Style="{DynamicResource RotationButtonStyle}" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Rx" FontStyle="Italic" FontSize="11"/>
                            <TextBlock Text="+" FontSize="30" />
                        </StackPanel>
                    </Button>
                    <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True"
                             materialDesign:HintAssist.Hint="X-rotation"   TextAlignment="Center"
                             Text="0°" Style="{DynamicResource InputMaterialDesignTextBox}" Height="70"></TextBox>
                    -->
                <!-- Row 2: Rotation Y -->
                <!--
                    <Button  Grid.Row="1"  Grid.Column="0" Style="{DynamicResource RotationButtonStyle}" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Ry" FontStyle="Italic" FontSize="11"/>
                            <TextBlock Text="-" FontSize="30" />
                        </StackPanel>
                    </Button>
                    <Button Grid.Row="1" Grid.Column="2" Style="{DynamicResource RotationButtonStyle}" >
                        <StackPanel Orientation="Horizontal" >
                            <TextBlock Text="Ry" FontStyle="Italic" FontSize="11"/>
                            <TextBlock Text="+" FontSize="30" />
                        </StackPanel>
                    </Button>
                    <TextBox  Grid.Row="1"   Grid.Column="1"     TextAlignment="Center"
                              IsReadOnly="True" materialDesign:HintAssist.Hint="Y-rotation" 
                              Text="0°" Style="{DynamicResource InputMaterialDesignTextBox}" Height="70"></TextBox>
                    
                </Grid>-->
            </Grid>

        </materialDesign:Card>
    </Grid>


</UserControl>
