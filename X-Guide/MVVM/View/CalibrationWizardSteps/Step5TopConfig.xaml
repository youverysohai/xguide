<UserControl x:Class="X_Guide.MVVM.View.CalibrationWizardSteps.Step5TopConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:X_Guide.MVVM.View.CalibrationWizardSteps" xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:enums="clr-namespace:X_Guide.Enums" xmlns:XCust="clr-namespace:X_Guide.CustomControls" xmlns:RadialMenu="clr-namespace:RadialMenu.Controls;assembly=RadialMenu" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:cust ="clr-namespace:X_Guide.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="TopConfig">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <XCust:JogControllersLayout Type="{Binding Calibration.Manipulator.Type, ElementName=TopConfig}"  ></XCust:JogControllersLayout>
        

        </Grid>
        <GroupBox Visibility="Visible" Grid.Row="2" Style="{StaticResource GroupBoxTab}" MinHeight="210">
            <i:Interaction.Triggers>
                <i:DataTrigger Binding="{Binding DataContext.Calibration.Orientation,ElementName=Step6View}" Value="{x:Static enums:Orientation.LookDownward}">
                    <i:ChangePropertyAction PropertyName="Visibility" Value="Visible" />
                </i:DataTrigger>
            </i:Interaction.Triggers>
            <GroupBox.Header>
                <TextBlock Text="Top Config Calibration" Style="{StaticResource SubtitleTextBlockStyle}"  HorizontalAlignment="Center" VerticalAlignment="Center" />
            </GroupBox.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <UniformGrid Rows="3" Columns="3">
                    <Border BorderBrush="{DynamicResource PrimaryBlueColor}" Grid.Row="1" Grid.Column="1">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[0]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="1" />
                    </Border>
                    <Border BorderBrush="{DynamicResource PrimaryBlueColor}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[1]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="2" />
                    </Border>
                    <Border BorderBrush="{DynamicResource PrimaryBlueColor}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[2]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="3" />
                    </Border>
                    <Border BorderBrush="{DynamicResource PrimaryBlueColor}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[3]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="4" />
                    </Border>
                    <Border>
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[4]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="5" />
                    </Border>
                    <Border>
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[5]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="6" />
                    </Border>
                    <Border BorderBrush="{DynamicResource PrimaryBlueColor}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[6]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="7" />
                    </Border>
                    <Border BorderBrush="{DynamicResource PrimaryBlueColor}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[7]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="8" />
                    </Border>
                    <Border BorderBrush="{DynamicResource PrimaryBlueColor}">
                        <i:Interaction.Triggers>
                            <i:DataTrigger Binding="{Binding NinePointState[8]}" Value="True">
                                <i:ChangePropertyAction PropertyName="Background" Value="{DynamicResource PrimaryBlueColor}"></i:ChangePropertyAction>
                            </i:DataTrigger>
                        </i:Interaction.Triggers>
                        <TextBlock Text="9" />
                    </Border>
                </UniformGrid>
            </Grid>
        </GroupBox>
    </Grid>
</UserControl>
