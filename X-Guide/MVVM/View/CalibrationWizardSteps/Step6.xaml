                        <Release:VmRenderControl   Name="p3_box" Loaded="p_box_Loaded" Width="840"></Release:VmRenderControl>
                    </hc:CarouselItem>
                    <hc:CarouselItem>
                        <Release:VmRenderControl   Name="p4_box" Loaded="p_box_Loaded" Width="840"></Release:VmRenderControl>
                    </hc:CarouselItem>
                    <hc:CarouselItem>
                        <Release:VmRenderControl   Name="p5_box" Loaded="p_box_Loaded" Width="840"></Release:VmRenderControl>
