                        <Release:VmRenderControl   Name="p7_box" Loaded="p_box_Loaded" Width="840"></Release:VmRenderControl>
                    </hc:CarouselItem>
                    <hc:CarouselItem>
                        <Release:VmRenderControl   Name="p8_box" Loaded="p_box_Loaded" Width="840"></Release:VmRenderControl>
