<UserControl x:Class="X_Guide.MVVM.View.CalibrationWizardSteps.Step6"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:X_Guide.MVVM.View.CalibrationWizardSteps"
             xmlns:views="clr-namespace:X_Guide.MVVM.View"
             xmlns:XCust="clr-namespace:X_Guide.CustomControls"
               xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
              xmlns:ha="http://schemas.mvtec.com/halcondotnet"
             mc:Ignorable="d"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:ui="http://schemas.modernwpf.com/2019"
              xmlns:Release="clr-namespace:VMControls.WPF.Release;assembly=VMControls.WPF.Release"
               d:DesignHeight="600" d:DesignWidth="1000" d:Foreground="Wheat">
    <UserControl.Resources>
        <Style TargetType="Label" x:Key="OutputLabel" BasedOn="{StaticResource MaterialDesignLabel}">
            <Setter Property="FontSize" Value="13" />
        </Style>
        <Style TargetType="TextBlock" x:Key="UnitTextBlock">
            <Setter Property="FontSize" Value="15" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
            <Setter Property="Margin" Value="5" />
        </Style>
        <Style TargetType="Label" x:Key="unitStyle" BasedOn="{StaticResource DefaultLabelStyle}">
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontSize" Value="11" />
        </Style>
    </UserControl.Resources>
    <Grid Margin="20">
        <ui:ContentDialog x:Name="NewCalibrationDialog"  IsShadowEnabled="True" CloseButtonText="Cancel" CloseButtonStyle="{DynamicResource DateTimePickerFlyoutButtonStyle}" PrimaryButtonText="Confirm" DefaultButton="Primary" Title="New Calibration Results">

            <ui:SimpleStackPanel Orientation="Vertical">
                <TextBlock Margin="6 5">Accept Changes?</TextBlock>
                <Border BorderBrush="White" BorderThickness="1" CornerRadius="5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1.3*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Margin="5" FontWeight="Bold" Style="{DynamicResource MaterialDesignLabel}" Grid.Row="0" HorizontalAlignment="Left">Result</Label>
                        <Label Margin="2" FontWeight="Bold"  Style="{DynamicResource MaterialDesignLabel}" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center">Old Value</Label>
                        <ui:FontIcon Glyph="&#xE974;" FontWeight="Bold" Foreground="White" FontSize="8" Grid.Column="2"  VerticalAlignment="Center" HorizontalAlignment="Center"></ui:FontIcon>
                        <Label Margin="2" FontWeight="Bold"  Style="{DynamicResource MaterialDesignLabel}" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Left"  VerticalAlignment="Center">New Value</Label>
                        <Border Grid.Row="0" Grid.ColumnSpan="4" Background="White" Height="1" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />

                        <Label Style="{DynamicResource MaterialDesignLabel}" Content="Camera X Scaling" Grid.Row="1" Grid.Column="0" Margin="5" />
                        <TextBlock Text="{Binding Calibration.Mm_per_pixel, StringFormat={}{0:F2}}" Grid.Row="1" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                        <Label Content="mm/px" Grid.Row="1" Grid.Column="2" Style="{DynamicResource unitStyle}" />

                        <Label Style="{DynamicResource MaterialDesignLabel}" Content="Camera Y Scaling" Grid.Row="2" Grid.Column="0" Margin="5" />
                        <TextBlock Text="{Binding Calibration.Mm_per_pixel, StringFormat={}{0:F2}}" Grid.Row="2" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                        <Label Content="mm/px" Grid.Row="2" Grid.Column="2"  Style="{DynamicResource unitStyle}" />

                        <Label Style="{DynamicResource MaterialDesignLabel}" Content="X offset" Grid.Row="3" Grid.Column="0" Margin="5" />
                        <TextBlock Text="{Binding Calibration.CXOffSet, StringFormat={}{0:F2}}" Grid.Row="3" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                        <Label Content="mm" Grid.Row="3" Grid.Column="2" Style="{DynamicResource unitStyle}" />

                        <Label Style="{DynamicResource MaterialDesignLabel}" Content="Y offset" Grid.Row="4" Grid.Column="0" Margin="5" />
                        <TextBlock  Text="{Binding Calibration.CYOffset, StringFormat={}{0:F2}}"  Grid.Row="4" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                        <Label Content="mm" Grid.Row="4" Grid.Column="2" Style="{DynamicResource unitStyle}" />

                        <Label Style="{DynamicResource MaterialDesignLabel}" Content="RZ offset" Grid.Row="5" Grid.Column="0" Margin="5" />
                        <TextBlock Text="{Binding Calibration.CRZOffset, StringFormat={}{0:F2}}" Grid.Row="5" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                        <Label Content="°" Grid.Row="5" Grid.Column="2" />
                    </Grid>
                </Border>
            </ui:SimpleStackPanel>
        </ui:ContentDialog>
        <!--Live Processed Image-->
        <hc:ScrollViewer  Grid.RowSpan="3" Grid.ColumnSpan="2">

            <hc:FlexPanel JustifyContent="SpaceAround" FlexWrap="Wrap">

                <!--<XCust:CustomRenderControl hc:FlexPanel.FlexBasis="640" Height="480" Procedure="{Binding VisProcedure}"></XCust:CustomRenderControl>-->
                <hc:Carousel Width="720">
                    <ContentControl Width="720" Height="500" Content="{Binding VisionView}">
                        <ContentControl.ContentTemplateSelector>
                            <views:ViewTemplateSelector />
                        </ContentControl.ContentTemplateSelector>
                    </ContentControl>
                    <!--<XCust:HalconSmartControl Width="640" Height="480" Image="{Binding LiveImage}" Point="{Binding OutputImageParameter}" />
                    <XCust:HalconSmartControl Width="648" Height="488" Image="{Binding OutputImage}" />-->
                </hc:Carousel>

                <GroupBox  hc:FlexPanel.FlexBasis="300" MinHeight="500"  Grid.RowSpan="3" Grid.Column="1" Style="{StaticResource GroupBoxTab}">
                    <GroupBox.Header>
                        <TextBlock  HorizontalAlignment="Center" Style="{DynamicResource TitleTextBlockStyle}" Text="Calibration Results" />
                    </GroupBox.Header>
                    <ui:SimpleStackPanel Orientation="Vertical">
                        <XCust:CustomConnectionStatus IsConnected="{Binding CanCalibrate}" />
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label Content="Camera X Scaling:" Grid.Row="0" Grid.Column="0" Margin="5" />
                            <TextBlock Text="{Binding Calibration.Mm_per_pixel, StringFormat={}{0:F2}}" Grid.Row="0" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                            <Label Content="mm per pixel" Grid.Row="0" Grid.Column="2" Style="{DynamicResource unitStyle}" />

                            <Label Content="Camera Y Scaling:" Grid.Row="1" Grid.Column="0" Margin="5" />
                            <TextBlock Text="{Binding Calibration.Mm_per_pixel, StringFormat={}{0:F2}}" Grid.Row="1" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                            <Label Content="mm per pixel" Grid.Row="1" Grid.Column="2"  Style="{DynamicResource unitStyle}" />

                            <Label Content="X offset:" Grid.Row="2" Grid.Column="0" Margin="5" />
                            <TextBlock Text="{Binding Calibration.CXOffSet, StringFormat={}{0:F2}}" Grid.Row="2" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                            <Label Content="mm" Grid.Row="2" Grid.Column="2" Style="{DynamicResource unitStyle}" />

                            <Label Content="Y offset:" Grid.Row="3" Grid.Column="0" Margin="5" />
                            <TextBlock  Text="{Binding Calibration.CYOffset, StringFormat={}{0:F2}}"  Grid.Row="3" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                            <Label Content="mm" Grid.Row="3" Grid.Column="2" Style="{DynamicResource unitStyle}" />

                            <Label Content="RZ offset:" Grid.Row="4" Grid.Column="0" Margin="5" />
                            <TextBlock Text="{Binding Calibration.CRZOffset, StringFormat={}{0:F2}}" Grid.Row="4" Grid.Column="1" Margin="5" Style="{DynamicResource ReadOnlyTextBlock}" />
                            <Label Content="°" Grid.Row="4" Grid.Column="2" />

                            <!--<ComboBox Grid.Row="8" ItemsSource="{Binding Modules}">
                            </ComboBox>-->

                            <ui:SimpleStackPanel Orientation="Vertical" Grid.Row="10">

                                <Label Style="{DynamicResource MaterialDesignLabel}">X-Offset</Label>
                                <TextBox Text="{Binding Calibration.XMove}"></TextBox>
                                <Label Style="{DynamicResource MaterialDesignLabel}">Y-Offset</Label>
                                <TextBox Text="{Binding Calibration.YMove}"></TextBox>
                                <!--<Button Grid.Row="5"  Command="{Binding OperationCommand}" >Start Operation</Button>-->
                                <Button Grid.Row="6"   Command="{Binding CalibrateCommand}" x:Name="StartCalibrationBtn" Click="StartCalibrationBtn_Click">Start Calibration</Button>
                                <Button Grid.Row="7"   Command="{Binding SaveCommand}" >Save</Button>
                            </ui:SimpleStackPanel>
                        </Grid>
                    </ui:SimpleStackPanel>
                </GroupBox>
            </hc:FlexPanel>
        </hc:ScrollViewer>
    </Grid>
</UserControl>