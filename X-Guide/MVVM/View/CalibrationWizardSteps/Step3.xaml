<UserControl x:Class="X_Guide.MVVM.View.CalibrationWizardSteps.Step3"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:X_Guide.MVVM.View.CalibrationWizardSteps"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid Margin="0 0 0 10">
        <materialDesign:Card UniformCornerRadius="20" Margin="0 10 15 0">

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" >
                <TextBlock Text="Camera Mounting &amp; Orientation" HorizontalAlignment="Center" FontSize="35" Margin="0 0 0 25"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <TextBox   Width="350" FontSize="20" Foreground="{DynamicResource PrimaryBlueColor}" Text="Gantry 1" IsReadOnly="True"   Style="{DynamicResource  MaterialDesignFloatingHintTextBox}"
                         materialDesign:HintAssist.Hint="Manipulator's name :" TextAlignment="Center"/>

                    <TextBox Width="350" FontSize="20" Foreground="{DynamicResource PrimaryBlueColor}" Text="Gantry System" IsReadOnly="True"   Style="{DynamicResource  MaterialDesignFloatingHintTextBox }"
                         materialDesign:HintAssist.Hint="Manipulator's Type :" TextAlignment="Center"/>
                </StackPanel>



            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
