<UserControl x:Class="X_Guide.MVVM.View.CalibrationWizardSteps.CalibrationWizardStart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:X_Guide.MVVM.View.CalibrationWizardSteps"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:c="clr-namespace:X_Guide.Converter" 
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="1000"
             x:Name="CalibWizStart">
    <UserControl.Resources>
        <c:LastCharacterConverter x:Key="LastCharacterConverter" />
        <DataTemplate x:Key="ChipTemplate">

            <materialDesign:Chip 
        Style="{DynamicResource MaterialDesignOutlineChip}"
         
            
            Icon="{Binding Converter={StaticResource LastCharacterConverter}}"
            Command="{Binding DataContext.LoadCalibCommand, ElementName=CalibWizStart}" CommandParameter="{Binding}"  
               
              Margin="10">
                <hc:SimpleStackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}"/>
                    <Button Command="{Binding DataContext.DeleteCalibCommand, ElementName=CalibWizStart}" CommandParameter="{Binding}" Content="X" Style="{DynamicResource MaterialDesignIconForegroundButton}"/>
                </hc:SimpleStackPanel>
            </materialDesign:Chip>
        </DataTemplate>
        <!--x:Static materialDesign:DrawerHost.CloseDrawerCommand-->
    </UserControl.Resources>

    <materialDesign:Card Style="{DynamicResource CardLayout}" >
        <materialDesign:DrawerHost OpenMode="Standard" >
            <materialDesign:DrawerHost.LeftDrawerContent>
                <hc:ScrollViewer VerticalScrollBarVisibility="Visible">
                    <hc:SimpleStackPanel Orientation="Vertical">
                        <TextBlock Margin="4"
                       HorizontalAlignment="Center"
                       Text="Edit" />
                        <hc:SimplePanel x:Name="ChipsContainer">
                            <ItemsControl ItemsSource="{Binding Calibrations}" ItemTemplate="{StaticResource ChipTemplate}" >
                            </ItemsControl>
                    </hc:SimplePanel>
                   
                    <Button Margin="4"
                    HorizontalAlignment="Center"
                    Command="{x:Static materialDesign:DrawerHost.CloseDrawerCommand}"
                    CommandParameter="{x:Static Dock.Left}"
                    Content="Close"
                    Style="{StaticResource MaterialDesignFlatButton}" />

                    </hc:SimpleStackPanel>
                </hc:ScrollViewer>
            </materialDesign:DrawerHost.LeftDrawerContent>

            <Grid Margin="20" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Grid.Row="0" Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}" 
                             CommandParameter="{x:Static Dock.Left}" 
                             Style="{DynamicResource MaterialDesignIconForegroundButton}" 
                             ToolTip="Edit"
                             ToolTipService.InitialShowDelay="122"
                             >
                    <materialDesign:PackIcon Kind="PlaylistEdit" Style="{DynamicResource IconStyle24}"/></Button>

                <!-- Start Page, Need enter calibration name first-->
                <StackPanel Grid.Column="1"  Grid.Row="1" Orientation="Vertical" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" x:Name="StartStepPage" >
                    <TextBlock HorizontalAlignment="Center" FontSize="35" >Calibration Wizard</TextBlock>
                    <TextBox Width="250" Margin="50"  FontSize="16"  Style="{DynamicResource MaterialDesignFloatingHintTextBox }"
                         materialDesign:HintAssist.Hint="Enter New Calibration Name" Text="{Binding Name}" x:Name="CalibName"/>

                    <TextBlock Margin="0 0 0 50" HorizontalAlignment="Center" VerticalAlignment="Bottom">Press Start to Begin <materialDesign:PackIcon Kind="ArrowDownBoldOutline"></materialDesign:PackIcon></TextBlock>

                    <Button Command="{Binding StartCalibCommand}"  Style="{DynamicResource MaterialDesignPaperButton}" Width="200" Margin="0 0 0 20">Start</Button>
                    




                </StackPanel>

                <!-- simplest form -->
                <materialDesign:Snackbar
                        x:Name="SnackbarMessage" Grid.Row="3"  Grid.Column="1"
                            IsActive="False"   MessageQueue="{materialDesign:MessageQueue}" />
            </Grid>
        </materialDesign:DrawerHost>
    </materialDesign:Card>


</UserControl>
